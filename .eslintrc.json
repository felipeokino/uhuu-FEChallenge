{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "react"
  ],
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "rules": {
      "semi": ["warn", "always"],
      "quotes": ["warn", "single"],
      "indent": ["warn", 2],
      "object-curly-spacing": ["warn", "always"],
      "array-bracket-spacing": ["warn", "always"],
      "no-unused-vars": "warn"
  }
}
